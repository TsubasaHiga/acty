{
  "name": "acty",
  "type": "module",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "yarn build && astro preview",
    "archive": "yarn build && yarn node --loader ts-node/esm utils/genDistArchive.ts",
    "astro": "astro",
    "lint:scripts": "eslint --ext .ts,.tsx,.astro . --max-warnings=0",
    "lint:styles": "stylelint \"src/**/*.{css,scss,html,astro}\"",
    "format": "prettier --write . --ignore-path .gitignore --ignore-unknown",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,astro}": "yarn lint:scripts",
    "*.{css,scss,html,astro}": "yarn lint:styles",
    "*": "yarn format"
  },
  "dependencies": {
    "@astrojs/image": "^0.16.9",
    "@astrojs/partytown": "^1.2.3",
    "@astrojs/prefetch": "^0.2.3",
    "@astrojs/react": "^2.1.3",
    "@astrojs/sitemap": "^1.2.2",
    "@astrojs/tailwind": "^3.1.3",
    "@fontsource/noto-sans-jp": "^4.5.12",
    "@nanostores/react": "^0.4.1",
    "astro": "^2.2.3",
    "astro-compress": "^1.1.49",
    "astro-robots-txt": "^0.4.1",
    "astro-seo": "^0.7.5",
    "auto-bind": "^5.0.1",
    "clsx": "^1.2.1",
    "dayjs": "^1.11.9",
    "deepmerge": "^4.3.1",
    "is-touch-device": "^1.0.1",
    "isomorphic-dompurify": "^1.2.0",
    "nanostores": "^0.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ress": "^5.0.2",
    "tailwindcss": "^3.3.2",
    "throttle-debounce": "^5.0.0",
    "ua-parser-js": "^1.0.35"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/archiver": "^5.3.2",
    "@types/is-touch-device": "^1.0.0",
    "@types/node": "^18.15.13",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@types/throttle-debounce": "^5.0.0",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "archiver": "^5.3.1",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-astro": "^0.26.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tailwindcss": "^3.11.0",
    "fs": "^0.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "path": "^0.12.7",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.8.1",
    "prettier-plugin-md-nocjsp": "^1.5.1",
    "sass": "^1.60.0",
    "sharp": "^0.32.2",
    "stylelint": "^15.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "ts-node": "^10.9.1"
  }
}
