{
  "name": "acty",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "archive": "astro check && tsc --noEmit && astro build && yarn node --loader ts-node/esm utils/genDistArchive.ts",
    "astro": "astro",
    "lint:scripts": "eslint --ext .ts,.tsx,.astro . --max-warnings=0",
    "lint:styles": "stylelint \"src/**/*.{css,scss,html,tsx,astro}\"",
    "format": "prettier --write . --ignore-path .gitignore --ignore-unknown",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,astro}": "yarn lint:scripts",
    "*.{css,scss,html,tsx,astro}": "yarn lint:styles",
    "*": "yarn format"
  },
  "dependencies": {
    "@astrojs/react": "^2.0.2",
    "@astrojs/tailwind": "^3.0.0",
    "@nanostores/react": "^0.4.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "astro": "^2.0.0",
    "dayjs": "^1.11.7",
    "nanostores": "^0.7.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "archiver": "^5.3.1",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-astro": "^0.23.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tailwindcss": "^3.8.2",
    "fs": "^0.0.1-security",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "path": "^0.12.7",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.3",
    "prettier-plugin-astro": "^0.7.2",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "ts-node": "^10.9.1"
  }
}
