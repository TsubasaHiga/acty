{
  "name": "acty",
  "type": "module",
  "version": "0.0.6",
  "private": true,
  "scripts": {
    "dev": "astro dev & yarn convertImages --watch",
    "start": "astro dev",
    "build": "yarn convertImages && astro check && tsc --noEmit && astro build",
    "preview": "yarn build && astro preview",
    "archive": "yarn build && yarn node --loader ts-node/esm utils/genDistArchive.ts",
    "astro": "astro",
    "convertImages": "yarn node --loader ts-node/esm utils/convertImages.ts",
    "lint:scripts": "eslint --ext .ts,.tsx,.astro",
    "lint:styles": "stylelint \"src/**/*.{css,scss,html,astro}\"",
    "format": "prettier --write . --ignore-unknown",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,astro}": "yarn lint:scripts",
    "*.{css,scss,html,astro}": "yarn lint:styles",
    "*": "yarn format"
  },
  "dependencies": {
    "@astrojs/check": "0.9.2",
    "@astrojs/react": "3.6.1",
    "@astrojs/sitemap": "3.1.6",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource/noto-sans-jp": "^5.0.19",
    "@nanostores/react": "^0.7.2",
    "astro": "4.13.2",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "auto-bind": "^5.0.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.11",
    "deepmerge": "^4.3.1",
    "focus-visible": "^5.2.0",
    "image-size": "^1.1.1",
    "is-touch-device": "^1.0.1",
    "isomorphic-dompurify": "^2.12.0",
    "nanostores": "^0.10.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ress": "^5.0.2",
    "tailwindcss": "^3.4.4",
    "throttle-debounce": "^5.0.0",
    "typescript": "^5.4.5",
    "ua-parser-js": "^1.0.38"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/archiver": "^6.0.2",
    "@types/chokidar": "^2.1.3",
    "@types/is-touch-device": "^1.0.2",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/throttle-debounce": "^5.0.2",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.19",
    "chokidar": "^3.6.0",
    "cssnano": "^7.0.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-tailwindcss": "^3.17.3",
    "fs": "^0.0.2",
    "glob": "^10.4.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "path": "^0.12.7",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.1",
    "prettier-plugin-astro": "^0.14.0",
    "sass": "^1.77.4",
    "sharp": "^0.33.4",
    "stylelint": "^16.6.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2"
  },
  "packageManager": "yarn@4.1.1"
}
